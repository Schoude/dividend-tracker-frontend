---
import type { Sector } from "../../types";

export interface Props {
  sectors: Sector[];
}

const { sectors } = Astro.props;
---

<section class="sectors">
  <h3 class="heading">Branchen:</h3>
  <div class="inner">
    {
      sectors.map((sector) => (
        <div class="sector">
          <img
            class="icon"
            src={sector.icon}
            style="filter: invert(1);"
            width="25"
            height="25"
            alt={`Icon: ${sector.name}`}
            loading="lazy"
          />
          {sector.name}
        </div>
      ))
    }
  </div>
</section>

<style>
  .heading {
    margin-block-end: 0.45rem;
  }

  .inner {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .sector {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
</style>
